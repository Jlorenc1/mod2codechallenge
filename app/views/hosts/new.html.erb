<h1>New Host</h1>

<%= flash[:message] %> 
<%= form_for @host do |f| %>
    <%= f.label "First Name: " %>
    <%= f.text_field :first_name %> <br><br>

    <%= f.label "Last Name: " %>
    <%= f.text_field :last_name %><br><br>

    <%= f.label "Phone Number: " %>
    <%= f.text_field :phone_number %><br><br>

    <%= f.label "Email: " %>
    <%= f.text_field :email_address %><br><br>

    <%= f.label "Address: " %>
    <%= f.text_field :address %><br><br>   
<%= f.submit %>
<% end %>