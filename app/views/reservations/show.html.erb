<h1>Reservation Show</h1>

<div class="card" style="width: 25rem;">
    <div class="card-body">
        <b>Reservation Number: <%= @reservation.id %></b><br>
        Number of Guests: <%= @reservation.number_of_guests %><br> 
        Starting Date: <%= @reservation.reservation_start_date %><br>    
        Ending Date: <%= @reservation.reservation_end_date %>
        <%= button_to "Edit", edit_reservation_path, method: :get %>
        <%= button_to "Delete", reservation_path, method: :delete %>            
        <%= button_to "Leave Review", new_review_path, method: :get %>  
    </div>
</div>